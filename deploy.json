{
    "$schema": "https://workers.cloudflare.com/schemas/deploy.json",
    "name": "TG-ChatBot",
    "description": "A free & fast AI chatbot for Telegram, powered by Llama, Gemini, and more",
    "icon": "ðŸ¤–",
    "deploy": {
        "worker": {
            "name": "tg-chatbot",
            "main": "src/index.ts",
            "compatibility_date": "2024-01-01"
        },
        "bindings": {
            "kv_namespaces": [
                {
                    "name": "TG_BOT_KV",
                    "title": "TG_BOT_KV"
                }
            ],
            "vars": [
                {
                    "name": "TELEGRAM_TOKEN",
                    "description": "Your Telegram Bot Token (from @BotFather)",
                    "secret": true,
                    "required": true
                },
                {
                    "name": "GROQ_API_KEY",
                    "description": "Groq API Key (from console.groq.com)",
                    "secret": true,
                    "required": true
                },
                {
                    "name": "GEMINI_API_KEY",
                    "description": "Google Gemini API Key (optional)",
                    "secret": true,
                    "required": false
                },
                {
                    "name": "ACCESS_MODE",
                    "description": "Access mode: 'public' (anyone) or 'private' (whitelist)",
                    "default": "public",
                    "required": false
                },
                {
                    "name": "ALLOWED_USER_IDS",
                    "description": "Comma-separated Telegram User IDs (for private mode)",
                    "default": "",
                    "required": false
                }
            ]
        }
    }
}