{
    "name": "tg-chatbot",
    "main": "src/index.ts",
    "compatibility_date": "2024-01-01",
    "vars": {
        "TELEGRAM_TOKEN": {
            "type": "secret",
            "description": "Your Telegram Bot Token from @BotFather"
        },
        "ACCESS_MODE": {
            "type": "text",
            "default": "public",
            "description": "Access mode: 'public' or 'private'"
        },
        "ALLOWED_USER_IDS": {
            "type": "text",
            "default": "",
            "description": "Comma-separated user IDs (for private mode)"
        }
    },
    "kv_namespaces": [
        {
            "binding": "TG_BOT_KV",
            "description": "KV namespace for bot data"
        }
    ]
}