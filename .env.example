# TG-ChatBot Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token from @BotFather
TELEGRAM_TOKEN=your_telegram_bot_token

# Groq API Key (for Llama, Whisper, TTS)
GROQ_API_KEY=your_groq_api_key

# Google Gemini API Key (optional, leave empty if not available)
GEMINI_API_KEY=your_gemini_api_key

# Cloudflare API Token (with Workers and KV permissions)
# Get from: dash.cloudflare.com → Profile → API Tokens → Create Token
CF_API_TOKEN=your_cloudflare_api_token

# These are auto-detected by setup.py, but you can also set manually:
# CF_ACCOUNT_ID=your_account_id
# CF_KV_NAMESPACE_ID=your_kv_namespace_id

# Access Mode: "public" or "private"
ACCESS_MODE=private

# Allowed User IDs (comma-separated, only used if ACCESS_MODE=private)
ALLOWED_USER_IDS=123456789,987654321
